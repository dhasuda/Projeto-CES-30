<!DOCTYPE html>
<html lang="pt-BR">

<head>
	<%- include('../commons/head_common.ejs') %>
	<%- include('../commons/head_datatables.ejs') %>
	<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.4.2/css/all.css' integrity='sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns' crossorigin='anonymous'>
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">

	<!-- Navigation-->
	<%- include('nav.ejs') %>

	<div class="content-wrapper">
		<div class="container-fluid">
			<div class="card mb-3">
				<div class="card-body ui segment dimmable">
						<div class="ui active inverted dimmer">
							<div class="ui text loader">Carregando...</div>
						</div>
					<div class="table-responsive">
						<table id="table" class="table table-bordered" style="width:100%">
							<thead>
								<tr>
									<th>Id Redacao</th>
									<th>Redação</th>
									<th>Proposta</th>
									<th>Aluno</th>
									<th>Turma</th>
									<th>Nota</th>
									<th>Categoria</th>
								</tr>
							</thead>
						</table>
					</div>
				</div>
			</div>
		</div>

		<!-- Modal-->
		<div class="modal fade" id="reescrita" tabindex="-1" role="dialog" aria-labelledby="addLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<form id="submitReescrita">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">Disponibilizar Reescrita</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<div class="form-group">
								<div class="row">
									<div class="col-sm-6">
										<div class="input-group date" id="dateInput" data-target-input="nearest" data-toggle="tooltip" data-placement="right" title="Selecione a data limite para a entrega.">
											<input id="date" type="text" class="form-control datetimepicker-input" data-target="#dateInput" required/>
											<div class="input-group-append" data-target="#dateInput" data-toggle="datetimepicker">
												<div class="input-group-text"><i class="fa fa-calendar"></i></div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="modal-footer">
							<button class="btn btn-success" type="submit" data-toggle="tooltip" data-placement="right" title="Tudo ok?">Disponibilizar</button>
						</div>
					</div>
				</form>
			</div>
		</div>

		<!-- Footers-->
		<%- include('../commons/footer_common.ejs') %>
		<%- include('../commons/footer_datatables.ejs') %>

		<!-- Custom scripts for this page-->
		<script src="<%= asset('/js/sweetalert.min.js') %>"></script>
		<script src="<%= asset('/js/tempusdominus-bootstrap-4.min.js') %>"></script>
		<script src="<%= asset('/js/custom/professor/redacao_corrected.js') %>"></script>
	</div>
</body>

</html>