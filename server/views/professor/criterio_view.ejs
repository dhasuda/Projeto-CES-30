<!DOCTYPE html>
<html lang="pt-BR">

<head>
	<%- include('../commons/head_common.ejs') %>
	<%- include('../commons/head_datatables.ejs') %>

	<link href="<%= asset('/css/bootstrap-table.min.css') %>" rel="stylesheet">
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">

	<!-- Navigation-->
	<%- include('nav.ejs') %>

	<div class="content-wrapper">
		<div class="container-fluid">
			<div class="card mb-3">
				<div class="card-body ui segment dimmable">
					<div class="ui active inverted dimmer">
						<div class="ui text loader">Carregando...</div>
					</div>
					<div class="table-responsive">
						<table id="table" class="table table-bordered" style="width:100%">
							<thead>
								<tr>
									<th>Categoria</th>
									<th>Nome</th>
									<th>Nota total</th>
								</tr>
							</thead>
						</table>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container-fluid-->
		<!-- /.content-wrapper-->
		<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="addLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<form id="submitEdit">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">Editar</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
						
							<div class="form-group">
								<input type="text" class="form-control" id="name" name="name" placeholder="Nome" required>
							</div>
							<div class="form-group">
								<textarea class="form-control" id="description" name="description" placeholder="Descrição" rows="5" required></textarea>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" id="totalgrade" name="totalgrade" placeholder="Nota Total" required>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" id="passo" name="passo" placeholder="Passo" pattern="^\d+(\.\d+)?" title="Por favor insira um número com casa decimal separada por ponto." required>
							</div>
						</div>
						<div class="modal-footer">
							<button id="btn-delete" class="btn btn-danger" type="button">Excluir</button>
							<button class="btn btn-success" type="submit">Salvar</button>
						</div>
					</div>
				</form>
			</div>
		</div>

		<!-- Footers-->
		<%- include('../commons/footer_common.ejs') %>
		<%- include('../commons/footer_datatables.ejs') %>

		<!-- Custom scripts for this page-->
		<script src="<%= asset('/js/sweetalert.min.js') %>"></script>
		<script src="<%= asset('/js/custom/professor/criterio_view.js') %>"></script>
	</div>
</body>

</html>