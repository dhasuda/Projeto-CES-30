								</div>
								<div class="form-group">
									<a id="create_button" class="btn btn-success btn-create text-light">Cadastrar</a>
									<button type="submit" id="btn-submit-hide" class="btn btn-success" style="display: none;">Criar</button>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="col-sm-4 mb-3">
					<div class="card">
						<div class="card-header">
							Cadastro de Aluno
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Footers-->
		<%- include('../commons/footer_common.ejs') %>

		<!-- Custom scripts for this page-->
